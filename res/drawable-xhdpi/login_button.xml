<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#48a9b5" />
            <stroke
                android:width="1dp"
                android:color="#037c8a" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#44c8d7"
                android:endColor="#037c8a"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#037c8a" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>