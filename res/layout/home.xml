<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Hi,There"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="top|left" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
    </LinearLayout>

    <EditText
        android:id="@+id/tweetContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/welcomeMessage"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine|textShortMessage"
        android:maxLength="140"
        android:minHeight="300px" />

    <Button
        android:id="@+id/sendTweet"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tweetContent"
        android:layout_alignRight="@+id/tweetContent"
        android:layout_below="@+id/tweetContent"
        android:layout_marginTop="64dp"
        android:background="@drawable/tweet_button"
        android:text="Tweet" />

</RelativeLayout>